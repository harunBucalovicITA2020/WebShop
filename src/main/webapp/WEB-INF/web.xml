<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>OnlineShopServlet</servlet-name>
        <servlet-class>webShopApp.OnlineShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OnlineShoppingCardServlet</servlet-name>
        <servlet-class>webShopApp.OnlineShoppingCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OnlineShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
      <welcome-file-list>
        <welcome-file>shop</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>OnlineShoppingCardServlet</servlet-name>
        <url-pattern>/card</url-pattern>
    </servlet-mapping>
  
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
